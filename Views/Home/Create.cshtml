@model Product
@{
    ViewData["Title"] = "Create";
}
<form asp-controller="Home" asp-action="Create" method="POST">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="row justify-content-center">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name">Name</label>
                    <input type="text" asp-for="Name" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Price">Price</label>
                    <input type="text" asp-for="Price" class="form-control" asp-format="{0:#,##}">
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="Category">Category</label>
                    <select asp-for="Category" asp-items="@ViewBag.Categories" class="form-select">
                        <option selected disabled>Select Category</option>
                    </select>
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="Description">Description</label>
                    <input type="text" asp-for="Description" class="form-control">
                </div>
                <div class="col-md-12 mb-3">
                    <label for="isApproved"></label>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" asp-for="isApproved" checked>
                        <label class="form-check-label" asp-for="isApproved">isApproved</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    </div>
</form>